<script type="text/javascript">
function validate()
{
  var names="";
  var xsize=-50;
  var ysize=-600;
  var myTable="";
  var node1="";
  start=document.getElementById("start").value;
  end=document.getElementById("end").value;
  node=document.getElementById("node").value;
  pod=document.getElementById("pod").value;
  dc=document.getElementById("dc").value;
  sp=document.getElementById("sp").value;
  pod=pod.toLowerCase();
  sp=sp.toUpperCase();
  dc=dc.toUpperCase();
  start2=document.getElementById("start2").value;
  end2=document.getElementById("end2").value;

  var date1 = convertToDate(start);
  var date2 = convertToDate(start2);
  var diffInDays = (date1.getTime() - date2.getTime())/ (1000*60*60*24);

  if (dc.includes(",")) {
    dc=dc.replace(/,/g,'|');
    dc="["+dc;
    dc=dc+"]";
  }
  if (sp.includes(",")) {
    sp=sp.replace(/,/g,'|');
    sp="["+sp;
    sp=sp+"]";
  }
  if (pod.includes(",")) {
    pod=pod.replace(/,/g,'|');
    pod="["+pod;
    pod=pod+"]";
  }
  var x = document.getElementById("checkbox_choice").checked;

	for (var i=0;i<document.getElementsByName("slt_username").length;i++)
	{
    if(document.getElementsByName("slt_username")[i].checked)
    {
      names=document.getElementsByName("slt_username")[i].value;
      ysize=ysize+500;
      if(names.indexOf("TOS") > -1) {
         myTable+="<iframe src='https://argus-ui.data.sfdc.net/argus/#/dashboards/1496242?start="+start+"&dc="+dc+"&sp="+sp+"&pod="+pod+"&metric="+names+"' scrolling='no' frameborder='0' style='position:absolute; clip:rect(230px,1000px,1000px,50px);height:1000px;width:2000px; border: 0px none; margin-top: "+ysize+"px; margin-left: "+xsize+"px;' ></iframe>";
         xsize=xsize+1050;
         if (x == true)
         {
          ysize=ysize-30;
          myTable+="<iframe src='https://argus-ui.data.sfdc.net/argus/#/dashboards/1496812?start="+start+"&end="+end+"&dc="+dc+"&sp="+sp+"&pod="+pod+"&node="+node+"&metric="+names+"&start2="+start2+"&end2="+end2+"&diff="+diffInDays+"' scrolling='no' frameborder='0' style='position:absolute; clip:rect(280px,1000px,1000px,50px);height:1000px;width:2000px; border: 0px none; margin-top: "+ysize+"px; margin-left: "+xsize+"px;' ></iframe>";
          ysize=ysize+30;
         }
         xsize=xsize-1050;
        }
      else if(names.indexOf("SFCon:") > -1) {
         names=names.replace(/SFCon:/g,'');
         myTable+="<iframe src='https://argus-ui.data.sfdc.net/argus/#/dashboards/1496528?start="+start+"&dc="+dc+"&sp="+sp+"&pod="+pod+"&node="+node+"&metric="+names+"' scrolling='no' frameborder='0' style='position:absolute; clip:rect(230px,1000px,1000px,50px);height:1000px;width:2000px; border: 0px none; margin-top: "+ysize+"px; margin-left: "+xsize+"px;' ></iframe>";
         xsize=xsize+1050;
         if (x == true)
         {
          ysize=ysize-30;
          myTable+="<iframe src='https://argus-ui.data.sfdc.net/argus/#/dashboards/1547801?start="+start+"&end="+end+"&dc="+dc+"&sp="+sp+"&pod="+pod+"&node="+node+"&metric="+names+"&start2="+start2+"&end2="+end2+"&diff="+diffInDays+"' scrolling='no' frameborder='0' style='position:absolute; clip:rect(280px,1000px,1000px,50px);height:1000px;width:2000px; border: 0px none; margin-top: "+ysize+"px; margin-left: "+xsize+"px;' ></iframe>";
          ysize=ysize+30;
         }
         xsize=xsize-1050;
        }
      else {
         myTable+="<iframe src='https://argus-ui.data.sfdc.net/argus/#/dashboards/716128?start="+start+"&end="+end+"&dc="+dc+"&sp="+sp+"&pod="+pod+"&node="+node+"&metric="+names+"' scrolling='no' frameborder='0' style='position:absolute; clip:rect(230px,1000px,1000px,50px);height:1000px;width:2000px; border: 0px none; margin-top: "+ysize+"px; margin-left: "+xsize+"px;' ></iframe>";
         xsize=xsize+1050;
         if (x == true)
         {
          ysize=ysize-30;
          myTable+="<iframe src='https://argus-ui.data.sfdc.net/argus/#/dashboards/1507610?start="+start+"&end="+end+"&dc="+dc+"&sp="+sp+"&pod="+pod+"&node="+node+"&metric="+names+"&start2="+start2+"&end2="+end2+"&diff="+diffInDays+"' scrolling='no' frameborder='0' style='position:absolute; clip:rect(280px,1000px,1000px,50px);height:1000px;width:2000px; border: 0px none; margin-top: "+ysize+"px; margin-left: "+xsize+"px;' ></iframe>";
          ysize=ysize+30;
         }
        xsize=xsize-1050;
      }
    }
  }
  document.getElementById("h3").innerHTML = myTable;
}

function convertToDate(str)
{
   var dateArr = str.split("-");
   return new Date(dateArr[0], dateArr[1], dateArr[2])
}

</script>

