<script type="text/javascript">
 var expanded = true;

 function showCheckboxes() {
   var checkboxes = document.getElementById("checkboxes");
   if (!expanded) {
     checkboxes.style.display = "block";
     expanded = true;
   } else {
     checkboxes.style.display = "none";
     expanded = false;
   }
 }
</script>
<script type="text/javascript">
var select_all = document.getElementById("select_all"); //select all checkbox
var tos_all = document.getElementById("tos_all"); //select all checkbox
var oracle_all = document.getElementById("oracle_all"); //select all checkbox
var sfcon_all = document.getElementById("sfcon_all"); //select all checkbox
var checkboxes = document.getElementsByName("slt_username"); //checkbox items
//select all checkboxes
select_all.addEventListener("change", function(e){
    for (i = 0; i < checkboxes.length; i++) {
        checkboxes[i].checked = select_all.checked;
        tos_all.checked = select_all.checked;
        oracle_all.checked = select_all.checked;
        sfcon_all.checked = select_all.checked;
    }
});
//toggle checkboxes
for (var i = 0; i < checkboxes.length; i++) {
    checkboxes[i].addEventListener('change', function(e){ //".checkbox" change
        //uncheck "select all", if one of the listed checkbox item is unchecked
        if(this.checked == false){
            select_all.checked = false;
          if(this.value.indexOf("SFCon") > -1) {
           sfcon_all.checked = false;
          }
          else if(this.value.indexOf("TOS") > -1) {
           tos_all.checked = false;
          }
          else {
           oracle_all.checked = false;
          }
        }
        //check "select all" if all checkbox items are checked
        if(document.querySelectorAll('.checkbox:checked').length == checkboxes.length){
            select_all.checked = true;
        }
    });
}

//select all tos metrics checkboxes
tos_all.addEventListener("change", function(e){
    for (i = 0; i < checkboxes.length; i++) {
        names=document.getElementsByName("slt_username")[i].value;
        if(names.indexOf("TOS") > -1) {
          checkboxes[i].checked = tos_all.checked;
          }
    }
});

//select all oracle metrics checkboxes
oracle_all.addEventListener("change", function(e){
    for (i = 0; i < checkboxes.length; i++) {
        names=document.getElementsByName("slt_username")[i].value;
        if(names.indexOf("TOS") > -1) {
          ;
          }
          else if(names.indexOf("SFCon:") > -1) {
            ;
            }
        else {
          checkboxes[i].checked = oracle_all.checked;
          }
    }
});

//select all sfcon metrics checkboxes
sfcon_all.addEventListener("change", function(e){
    for (i = 0; i < checkboxes.length; i++) {
        names=document.getElementsByName("slt_username")[i].value;
        if(names.indexOf("SFCon:") > -1) {
          checkboxes[i].checked = sfcon_all.checked;
          }
        }
});


var date = new Date();
var day = date.getDate()-1;
var thisday = date.getDate();
var month = date.getMonth() + 1;
var year = date.getFullYear();

if (month < 10) month = "0" + month;
if (day < 10) day = "0" + day;
if (thisday < 10) thisday = "0" + thisday;

var today = year + "-" + month + "-" + day;
var thistoday = year + "-" + month + "-" + thisday;

document.getElementById('start').value = today;
document.getElementById('end').value = thistoday;
</script>
